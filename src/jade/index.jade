include template/_mixins.jade
extends template/_default.jade

block append css
  +ex_css('http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext')
  +ex_css('http://fonts.googleapis.com/css?family=Poiret+One')
block append hjs
  +jsF('main.js')

block contents
  header
    .container
      include svg/logo.svg
      .left Go Algo
        span.grey rithm
      .right 
        a(href="#") Overview
        a(href="#team") Team
        a(href="#team") Contact us
  section#landing
    h1 goALgo
    h2 Interact with core computer science concepts
    img#langingImg(src='./assets/images/bg.jpg', alt='landing bg')
  section#second
    h1#sortTitle CS is complex?
    h2 We make it easier than you can imagine
    svg#sort
    h2 by rearranging it.
  section#third
    h1#popingTitle Too many things to learn?
    h2 We pop out all unnecessities
    svg#stack
    h2 to offer the pith of CS in the minimum size.
  section#forth
    h1#queueTitle Don't know where to start?
    h2 We enqueue unorganized terms and concepts
    svg#queue
    h2 to illuminate your next step.
  section#team
    h1 Our Team
    #teamContainer
      .teamItem
        img(src='./assets/images/avatar_thomas.jpg', alt='avatar')
        p Thomas Yang
        sub He drinks coffee and codes
      .teamItem
        img(src='./assets/images/avatar_inna.jpg', alt='avatar')
        p Inna Shteinbuk
        sub self taught and wishes to someday get to thomas' coding level
      .teamItem
        img(src='./assets/images/avatar_matt.jpg', alt='avatar')
        p Matt Zhang
        sub lalala
      
  footer
    p Made with â™¥ by Thomas Yang, Inna Shteinbuk, Matt Zhang in 2017
