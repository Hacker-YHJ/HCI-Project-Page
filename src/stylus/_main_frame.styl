html, body
  height: 100%
  width: 100%
  font-family: 'Helvetica Neue', helvetica, sans-serif

::selection
  background: #CCC

a:visited,
a:active,
a:hover,
a:link
  text-decoration: none
  color: inherit

header
  *::selection
    color: #03CCFA

  height: 60px
  width: 100%
  position: fixed
  top: 0
  z-index: 99
  background-color: #000000D0
  box-shadow: 0px 0.5px 1px #CCC
  color: white

  .grey
    color: #555

    &::selection
      color: #F6342B

  .container
    margin: 0 auto
    width: 960px
    height: 60px

  svg
    float: left
    width: 64px
    height: 64px
    padding-right: 24px

  .left
    float: left
    font-size: 32px
    line-height: 60px
    letter-spacing: 2px
    font-weight: lighter


  .right
    float: right
    font-size: 12px
    line-height: 72px
    font-family: 'Lato'
    font-weight: normal
    a
      margin: 0 12px

    &::after
      content: ''
      clear: both
section
  position: relative
  text-align: center
  width: 100%
  height: 100%
  color: #03CCFA
  background-color: black

#landing
  z-index: 2
  img
    width: 720px
    will-change: transform
  h1
    transition: color 0.4s ease-in-out
    font-size: 92px
    font-variant: small-caps

#second
  z-index: 1

#team
  height: 640px

#teamContainer
  margin: 0 auto
  padding-top: 100px
  width: 960px
  height: 400px

.teamItem
  float: left
  width: 33%
  text-align: center

  *::selection
    color: #F6342B

  img
    width: 96px
    height: 96px
    border-radius: 64px

  p
    font-size: 28px
    padding-top: 24px
    white-space: nowrap
    font-weight: lighter
    text-align: center

  sub
    font-size: 12px
    text-align: center
    color: #ccc

svg
  height: 400px
  width: 960px

h1
  font-family: 'Poiret One', 'Helvetica Neue', helvetica, sans-serif
  padding-top: 92px
  font-size: 48px
  z-index: 3

  &::selection
    color: #F6342B

h2
  z-index: 3
  position: relative
  padding: 12px
  color: #AAA
  font-size: 24px
  font-weight: lighter
  letter-spacing: 1px
  transition: color 1s cubic-bezier(0.4, 0, 0.2, 1)

  &::selection
    color: #03CCFA

sub
  display: block
  padding-top: 20px
  font-size: 24px

footer
  position: relative
  box-shadow: 0px -0.5px 1px #CCC
  z-index: 999
  background: black
  color: #03CCFA
  text-align: center

  p
    padding: 20px
    
    &::selection
      color: #F6342B
