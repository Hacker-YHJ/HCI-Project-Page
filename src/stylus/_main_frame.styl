html, body
  height: 100%
  width: 100%
  font-family: 'Helvetica Neue', helvetica, sans-serif

::selection
  background: #333
  color: white

a:visited,
a:active,
a:hover,
a:link
  text-decoration: none
  color: inherit

header
  height: 60px
  width: 100%
  position: fixed
  top: 0
  z-index: 99
  background-color: #000000D0
  box-shadow: 0px 0.5px 1px #CCC
  color: white

  .container
    margin: 0 auto
    width: 960px
    height: 60px

  .left
    position: absolute
    font-size: 32px
    line-height: 60px
    letter-spacing: 2px
    font-weight: lighter

  .right
    float: right
    font-size: 12px
    line-height: 72px
    font-family: 'Lato'
    font-weight: normal
    a
      margin: 0 12px

    &::after
      content: ''
      clear: both
section
  position: relative
  text-align: center
  width: 100%
  height: 100%
  color: #03CCFA
  background-color: black

#landing
  z-index: 2
  img
    width: 720px
    will-change: transform
  h1
    transition: color 0.4s ease-in-out
    font-size: 92px
    font-variant: small-caps

#second
  z-index: 1

svg
  height: 400px
  width: 960px

h1
  font-family: 'Poiret One', 'Helvetica Neue', helvetica, sans-serif
  padding-top: 92px
  font-size: 48px
  z-index: 3

h2
  z-index: 3
  position: relative
  padding: 12px
  color: #AAA
  font-size: 24px
  font-weight: lighter
  letter-spacing: 1px
  transition: color 1s cubic-bezier(0.4, 0, 0.2, 1)

sub
  display: block
  padding-top: 20px
  font-size: 24px

foot
  text-align: center

  a
    display: block
    margin: 0 auto
    padding-top: 20px
    line-height: 32px
    font-size: 16px
    text-transform: uppercase
    text-decoration: none
    font-style: italic
    color: #333

    &:hover,
    &:visited,
    &:active
      text-decoration: none
      color: #333
